/* xiao_tp_test.overlay */
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios
            = <&gpio0 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)> // 例: D2ピンをテスト用キーに
            ;
    };
    
    /* トラックポイントドライバの定義 */
    ps2_mouse {
        compatible = "zmk,input-mouse-ps2-uart";
        status = "okay";
        uart = <&uart0>;

        /* トラックポイントの設定（感度など） */
        tp-sensitivity = <240>;
        tp-neg-inertia = <10>;
    };
};

/* UARTピンの割り当て（ここが重要） */
&pinctrl {
    uart0_default: uart0_default {
        group1 {
            /* * XIAO nRF52840のピン割り当て:
             * D0 = P0.02 (Data / SDA)
             * D1 = P0.03 (Clock / SCL)
             * ※ UART RXをDataに、UART TXをClock（またはダミー）に割り当てます
             * ドライバの仕様上、RXピンでDataを読みます。
             */
            psels = <NRF_PSEL(UART_TX, 0, 3)>, /* TX = P0.03 (D1) -> Clock */
                    <NRF_PSEL(UART_RX, 0, 2)>; /* RX = P0.02 (D0) -> Data */
        };
    };

    uart0_sleep: uart0_sleep {
        group1 {
            psels = <NRF_PSEL(UART_TX, 0, 3)>,
                    <NRF_PSEL(UART_RX, 0, 2)>;
            low-power-enable;
        };
    };
};

&uart0 {
    status = "okay";
    current-speed = <115200>; /* PS/2用にドライバが内部で調整しますが、定義は必要 */
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
};